<Window x:Class="MyProcMng.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView Name="lsProc" FontSize="20" Background="LightBlue">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PId" DisplayMemberBinding="{Binding PId }" Width="75"></GridViewColumn>
                    <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding ProcessName }" Width="250"></GridViewColumn>
                    <GridViewColumn Header="Threads Count" DisplayMemberBinding="{Binding ThreadsCount }" Width="200"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        
    </Grid>
</Window>
